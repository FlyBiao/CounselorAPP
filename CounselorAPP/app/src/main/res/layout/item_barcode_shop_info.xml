<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_gravity="center" 
            android:orientation="horizontal">
            
        <TextView 
            android:id="@+id/tv_lists"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"/>
        
        <TextView 
            android:id="@+id/tv_shop_barcode_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="100dp"
            android:text="LB747585885we"/>
        
        <TextView 
            android:id="@+id/tv_shift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="100dp"
            android:paddingLeft="10dp"
            android:text="B04"/>
        
        <TextView 
            android:id="@+id/tv_shop_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"/>
        
        <TextView 
            android:id="@+id/tv_barcode_shop_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="false"
            android:text="ï¿¥45.90"/>

    </LinearLayout>
    
    <View
        style="@style/common_divider_line"
         />

</LinearLayout>
