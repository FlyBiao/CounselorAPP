<?xml version="1.0" encoding="utf-8"?>
<!-- 检查单位item布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/size_5"
		android:background="@drawable/button_ellipse_grade_huise_bg"
		android:orientation="vertical"
		android:padding="@dimen/size_10">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_org_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="机构名称"
				android:textSize="@dimen/font_14"/>

			<TextView
				android:id="@+id/tv_shop_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/size_10"
				android:text="店铺名称"
				android:textSize="@dimen/font_14"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/size_10"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="业绩"/>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="9"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="服务"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/size_5"
						android:text="0%"/>
					<TextView
						android:id="@+id/tv_shop_sums"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/size_5"
						android:text="￥0.0"/>

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:orientation="horizontal">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="非服务"/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="0%"/>
						</LinearLayout>
					</RelativeLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/size_5"
					android:orientation="horizontal">

					<ProgressBar
						android:id="@+id/pb_actual_sales_month"
						style="@android:style/Widget.ProgressBar.Horizontal"
						android:layout_width="match_parent"
						android:layout_height="6dp"
						android:max="100"
						android:progress="0"
						android:progressDrawable="@drawable/layer_list_progress_drawable_3"/>
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/size_10"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="服务"/>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="9"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/tv_service_finish_sum"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/size_5"
						android:text="/"/>

					<TextView
						android:id="@+id/tv_service_sum"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/size_5"
						android:text="0"/>

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:orientation="horizontal">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="愿意到店"/>

							<TextView
								android:id="@+id/tv_go_shop"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="0"/>
						</LinearLayout>
					</RelativeLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/size_5"
					android:orientation="horizontal">

					<ProgressBar
						android:id="@+id/pb_service"
						style="@android:style/Widget.ProgressBar.Horizontal"
						android:layout_width="match_parent"
						android:layout_height="6dp"
						android:max="100"
						android:progress="0"
						android:progressDrawable="@drawable/layer_list_progress_drawable_3"/>
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>

		<View
			style="@style/common_divider_line"
			android:layout_marginTop="@dimen/size_20"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/size_35"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="查看详情"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:drawableRight="@mipmap/arrow_right"
				android:text=""/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>