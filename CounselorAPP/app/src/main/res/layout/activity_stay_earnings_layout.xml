<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/base_content_bg"
    android:orientation="vertical" >
    
    <com.cesaas.android.counselor.order.widget.RefreshAndLoadMoreView
        android:id="@+id/refresh_develop_stay_and_load_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cesaas.android.counselor.order.widget.LoadMoreListView
            android:id="@+id/load_more_develop_stay_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.cesaas.android.counselor.order.widget.RefreshAndLoadMoreView>

    <ListView 
        android:id="@+id/tv_stay_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ></ListView>

    <TextView
        android:id="@+id/tv_not_datas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="暂时没有数据" />
    
</LinearLayout>