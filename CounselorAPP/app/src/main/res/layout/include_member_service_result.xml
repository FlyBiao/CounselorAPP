<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:background="@color/stand_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_member_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_color"
                android:textSize="@dimen/font_18"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textSize="@dimen/font_18"
                android:text="null"/>
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:text="(男士)"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_member_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_color"
                android:textSize="@dimen/font_18"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textSize="@dimen/font_18"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="联系方式"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbx_service_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_6"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:checked="true"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textColor="@color/new_base_bg"/>

            <CheckBox
                android:id="@+id/cbx_service_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_6"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信及其它"
                android:textColor="@color/new_base_bg"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="接听情况"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbx_service_result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_6"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:checked="true"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接听"
                android:textColor="@color/new_base_bg"/>

            <CheckBox
                android:id="@+id/cbx_service_result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_6"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没人接听"
                android:textColor="@color/new_base_bg"/>

            <CheckBox
                android:id="@+id/cbx_service_result3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_6"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客人挂断了"
                android:textColor="@color/new_base_bg"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="是否到店"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cbx_go_shop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_6"
                android:focusable="false"
                android:checked="true"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_base_bg"
                android:text="愿意来店"/>
            <CheckBox
                android:id="@+id/cbx_go_shop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_6"
                android:layout_marginLeft="@dimen/size_15"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_base_bg"
                android:text="不愿意来店"/>
            <CheckBox
                android:id="@+id/cbx_go_shop3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_6"
                android:layout_marginLeft="@dimen/size_15"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_base_bg"
                android:text="不确定"/>

        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="到店日期"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_goshop_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_go_shop_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/date_h"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Switch
        android:id="@+id/switch_go_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/defalult_text_color"
        android:gravity="right|center_vertical"
        android:layout_marginBottom="@dimen/size_5"
        android:text="到店那天再次提醒"
        android:visibility="gone"/>

    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="下次回访"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_next_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_next_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/date_h"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Switch
        android:id="@+id/switch_next_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/defalult_text_color"
        android:gravity="right|center_vertical"
        android:layout_marginBottom="@dimen/size_5"
        android:text="回访时候再次提醒"
        android:visibility="gone"/>

    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="客人心情"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.cesaas.android.counselor.order.custom.tag.FlowTagLayout
                android:id="@+id/member_lable_flow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginRight="@dimen/size_15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1"
            android:text="沟通内容"/>
        <EditText
            android:id="@+id/et_desc"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_80"
            android:layout_weight="4"
            android:paddingTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:enabled="true"
            android:gravity="top"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:hint="请填写更改原因"/>
    </LinearLayout>

    <View
        style="@style/common_divider_line"
        android:layout_marginTop="@dimen/size_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginRight="@dimen/size_15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1"
            android:text="备注内容"/>
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_60"
            android:layout_weight="4"
            android:paddingTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:enabled="true"
            android:gravity="top"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:hint="请填写更改原因"/>
    </LinearLayout>


</LinearLayout>