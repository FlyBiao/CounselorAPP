<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp" >

        <com.flybiao.adapterlibrary.widget.MyImageViewWidget
            android:id="@+id/iv_fans_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:visibility="visible"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="40.0dip" >

            <TextView
                android:id="@+id/tv_fans_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:textColor="@color/color_title_bar"
                android:ellipsize="end" 
                android:singleLine="true"
                android:maxWidth="90dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_fans_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="7dp"
                android:drawablePadding="8dp"
                android:textColor="@color/text_color_gray_3"
                android:textSize="14sp" />
            
        </LinearLayout>
        
        <CheckBox 
	        android:id="@+id/item_cb" 
	        android:layout_width="30dp" 
	        android:layout_height="30dp" 
	        android:background="@drawable/check_select"  
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:clickable="false" 
	        android:focusable="false" 
	        android:focusableInTouchMode="false" 
	        android:button="@null"
	        android:visibility="gone"/> 
        
    </RelativeLayout>
    
    <View style="@style/common_divider_line" />

</LinearLayout>