<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/dfff"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_title_bar" >

        <LinearLayout
            android:id="@+id/ll_consume_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="使用消费"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/tv_show_msg"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text=""
        android:textColor="#000000"
        android:textSize="30sp" />



    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                <Button
                        android:id="@+id/btn_sign"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="扫描"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_consume"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="消费"
                        android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_revocation"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="消费撤销"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_refund"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="退货"
                        android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_preAuth"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="预授权"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_preAuthCancel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="预授权撤销"
                        android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_preAuthFinish"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="预授权完成"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_preAuthFinishCancel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="预完成撤销"
                        android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_searchBalance"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="查询余额"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_signOut"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="签退"
                        android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_init"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="初始化"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_number"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="修改流水号"
                        android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_batchSettlement"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="批结算"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_settting"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="setting"
                        android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_ec_searchBalance"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="ec查询余额"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/btn_ec_xiaofei"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="ec消费"
                        android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                <Button
                        android:id="@+id/btn_go_to_next"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="移动支付"
                        android:textSize="30sp" />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="待定"
                        android:textSize="30sp" />
            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>