<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/new_button_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="原手机号："/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text=""
                android:textColor="@color/new_base_bg"
                android:textSize="@dimen/font_16"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            style="@style/common_dotted_line"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="新手机号："/>

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="4"
                android:background="@drawable/button_ellipse_grade_huise_bg"
                android:enabled="true"
                android:gravity="top"
                android:hint="请填写新手机号"
                android:inputType="phone"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_10"
                android:scrollbars="vertical"/>
        </LinearLayout>

        <View
            style="@style/common_dotted_line"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="说明："/>

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_60"
                android:layout_weight="4"
                android:background="@drawable/button_ellipse_grade_huise_bg"
                android:enabled="true"
                android:gravity="top"
                android:hint="请填写更改原因"
                android:maxLines="10"
                android:minLines="8"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_10"
                android:scrollbars="vertical"
                android:textColorHint="@color/new_base_bg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sure_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_45"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_purple"
                android:paddingBottom="@dimen/size_5"
                android:paddingLeft="@dimen/size_25"
                android:paddingRight="@dimen/size_25"
                android:paddingTop="@dimen/size_5"
                android:text="确认并提交"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>