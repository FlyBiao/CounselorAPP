<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_service_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="服务标题"/>
        <View style="@style/common_divider_line"
              android:layout_marginTop="@dimen/size_10"/>

        <EditText
            android:id="@+id/et_set_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:layout_marginTop="@dimen/size_30"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_gravity="center"
            android:paddingTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_10"
            android:enabled="true"
            android:gravity="top"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:textColorHint="@color/new_base_bg"
            android:hint=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginBottom="@dimen/size_10"
            android:background="@color/new_base_bg"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sure_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>