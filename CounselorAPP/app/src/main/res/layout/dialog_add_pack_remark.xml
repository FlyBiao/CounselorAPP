<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:background="@drawable/base_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:gravity="center"
            android:text="添加备注"
            android:textColor="@color/base_text_font_color_black"
            android:textSize="@dimen/font_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_70"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginBottom="@dimen/size_5"
            android:background="@drawable/et_remarks_bg">

            <EditText
                android:id="@+id/et_pack_remark"
                android:layout_height="@dimen/size_65"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:background="@null"
                android:paddingLeft="@dimen/size_10"
                android:focusableInTouchMode="true"
                android:hint="请输入箱备注"
                android:inputType="text"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />

        </LinearLayout>

        <View style="@style/common_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/base_text_font_color_black"
                android:gravity="center"
                android:text="返回"/>
            <View style="@style/common_shuli_divider_line"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/base_text_font_color_black"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>