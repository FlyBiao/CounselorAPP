<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:background="@drawable/base_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:gravity="center"
            android:text="选择调拨类型"
            android:textColor="@color/base_text_font_color_black"
            android:textSize="@dimen/font_16"/>
        <View style="@style/common_divider_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_place_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:gravity="center"
                android:text="订货"/>
            <View style="@style/common_divider_line"/>
            <TextView
                android:id="@+id/tv_fill_goods"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:gravity="center"
                android:text="补货"/>
            <View style="@style/common_divider_line"/>
            <TextView
                android:id="@+id/tv_shop_goods"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:gravity="center"
                android:text="铺货"/>

        </LinearLayout>

        <View style="@style/common_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/base_text_font_color_black"
                android:gravity="center"
                android:text="返回"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>