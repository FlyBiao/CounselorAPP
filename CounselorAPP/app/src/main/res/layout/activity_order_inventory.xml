<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_base_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_base_bg"
        android:orientation="horizontal">
        <include layout="@layout/base_title_special"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_transfer_routing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_rout_transfer"
            android:layout_width="@dimen/size_250"
            android:layout_height="@dimen/size_35"
            android:gravity="center"
            android:text="路由店铺调货"
            android:textColor="@color/white"
            android:background="@drawable/button_ellipse_red"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_shop_transfer"
            android:layout_width="@dimen/size_250"
            android:layout_height="@dimen/size_35"
            android:gravity="center"
            android:text="指定店铺调货"
            android:textColor="@color/white"
            android:background="@drawable/button_purple"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/ll_base_title"
        android:layout_above="@id/ll_transfer_routing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_35"
                        android:background="@drawable/button_ellipse_grade_huise_bg"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:layout_marginBottom="@dimen/size_2"
                        android:layout_marginTop="@dimen/size_2"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/et_search"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_35"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:inputType="text"
                            android:layout_weight="8"
                            android:enabled="true"
                            android:gravity="center"
                            android:hint="按商品条码搜索"
                            android:textColorHint="@color/line"
                            android:paddingLeft="@dimen/size_10"/>
                        <LinearLayout
                            android:id="@+id/ll_search_vip"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_35"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/search"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_35"
                        android:background="@drawable/button_ellipse_grade_huise_bg"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/et_shop_count"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_35"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:inputType="text"
                            android:layout_weight="6"
                            android:enabled="true"
                            android:gravity="center"
                            android:text="1"
                            android:hint="1"
                            android:textColorHint="@color/line"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_35"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_16"
                                android:text=""/>
                            <TextView
                                android:id="@+id/tv_bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_16"
                                android:text=""/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_scan_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/not_scan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_3"
                        android:text="扫描"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/common_divider_line"/>

            <LinearLayout
                android:id="@+id/ll_scan_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/software_textColor_unselected"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结果："
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/new_base_bg"/>
                    <TextView
                        android:id="@+id/tv_barcode_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/new_base_bg"/>
                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/font_14"
                        android:layout_marginLeft="@dimen/size_10"
                        android:textColor="@color/new_base_bg"/>
                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/font_14"
                        android:layout_marginLeft="@dimen/size_10"
                        android:textColor="@color/new_base_bg"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_automatic_route"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_65"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/font_14"
                            android:text="共"/>
                        <TextView
                            android:id="@+id/tv_shop_nums"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/font_14"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/orange"
                            android:text="个店铺"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:textSize="@dimen/font_14"
                        android:text="有货"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <View style="@style/common_divider_line"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_shop_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/size_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_customer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size_5"
                            android:button="@drawable/checkbox_checked_styles"
                            android:checked="true"
                            android:focusable="false"
                            android:visibility="visible"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/size_5"
                            android:text="寄给顾客"/>

                        <CheckBox
                            android:id="@+id/cb_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/size_20"
                            android:layout_marginRight="@dimen/size_5"
                            android:button="@drawable/checkbox_checked_styles"
                            android:focusable="false"
                            android:visibility="visible"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/size_5"
                            android:text="到店取货"/>
                    </LinearLayout>

                    <View style="@style/common_divider_line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号："
                            android:textColor="@color/new_base_bg"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/new_base_bg"/>

                        <LinearLayout
                            android:id="@+id/ll_query_member"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/size_10">

                            <TextView
                                android:id="@+id/tv_query_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/font_16"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/new_base_bg"
                            android:text="手 机 号 ："/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:background="@drawable/button_ellipse_grade_huise_bg"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_8"
                            android:layout_marginBottom="@dimen/size_2"
                            android:layout_marginTop="@dimen/size_2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/et_mobile"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/size_40"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:inputType="phone"
                                android:layout_weight="8"
                                android:enabled="true"
                                android:gravity="top"
                                android:hint="请输入手机号"
                                android:textColorHint="@color/line"
                                android:paddingLeft="@dimen/size_10"
                                android:paddingTop="@dimen/size_10"/>
                            <LinearLayout
                                android:id="@+id/ll_query_mobile"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_folder_open_mobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/font_16"
                                    android:text=""/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/common_divider_line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货姓名："
                            android:textColor="@color/new_base_bg"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_40"
                                android:layout_marginBottom="@dimen/size_2"
                                android:layout_marginLeft="@dimen/size_10"
                                android:layout_marginRight="@dimen/size_8"
                                android:layout_marginTop="@dimen/size_2"
                                android:background="@drawable/button_ellipse_grade_huise_bg"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_name"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/size_40"
                                    android:layout_gravity="center"
                                    android:layout_weight="8"
                                    android:background="@null"
                                    android:enabled="true"
                                    android:gravity="top"
                                    android:hint="请输入收货人姓名"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/size_10"
                                    android:paddingTop="@dimen/size_10"
                                    android:textColorHint="@color/line"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="@dimen/font_16"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/common_divider_line"/>

                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址："
                            android:textColor="@color/new_base_bg"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:layout_marginBottom="@dimen/size_2"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_8"
                            android:layout_marginTop="@dimen/size_2"
                            android:background="@drawable/button_ellipse_grade_huise_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_address"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/size_40"
                                android:layout_gravity="center"
                                android:layout_weight="8"
                                android:background="@null"
                                android:enabled="true"
                                android:gravity="top"
                                android:hint="请选择地址"
                                android:inputType="text"
                                android:paddingLeft="@dimen/size_10"
                                android:paddingTop="@dimen/size_10"
                                android:textColorHint="@color/line"/>

                            <View style="@style/common_shuli_divider_line"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_folder_open"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/font_16"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/common_divider_line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/size_5">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详细地址："
                            android:textColor="@color/new_base_bg"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:layout_marginBottom="@dimen/size_2"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginTop="@dimen/size_2"
                            android:background="@drawable/button_ellipse_grade_huise_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_details_address"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/size_40"
                                android:layout_gravity="center"
                                android:layout_weight="8"
                                android:background="@null"
                                android:enabled="true"
                                android:gravity="top"
                                android:hint="请选择详情地址信息"
                                android:inputType="text"
                                android:paddingLeft="@dimen/size_10"
                                android:paddingTop="@dimen/size_10"
                                android:textColorHint="@color/line"/>

                            <View style="@style/common_shuli_divider_line"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_folder_opens"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/font_16"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/common_divider_line"
                        android:layout_marginBottom="@dimen/size_10"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
