<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:background="@drawable/base_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:gravity="center"
            android:text="确认直接按箱收货？"
            android:textColor="@color/new_base_bg"
            android:textSize="@dimen/font_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:text="第"/>
            <TextView
                android:id="@+id/tv_box_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textStyle="bold"
                android:textSize="@dimen/font_14"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:text="箱"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:text="共"/>
            <TextView
                android:id="@+id/tv_count_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:text="件"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_35"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/button_ellipse_huise_bg"
                android:gravity="center"
                android:text="返回"/>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_35"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/button_purple"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:gravity="center"
                android:text="确定"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="按箱直接收货，表示您已确认收到该箱所有商品"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>