<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/ll_express"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_send_message"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_user_settings"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_user_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="文字内容"
                android:textColor="@color/c1"
                android:textSize="@dimen/t3" />
        </LinearLayout>

        <View
            style="@style/common_divider_line"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <EditText
            android:id="@+id/et_send_text_msg"
            android:layout_width="fill_parent"
            android:layout_height="120.0dip"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2.0dip"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:gravity="left|top"
            android:focusableInTouchMode="true"
            android:hint="请输入消息内容"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:textColor="@color/c1"
            android:textColorHint="@color/c3"
            android:textCursorDrawable="@null"
            android:textSize="14.0sp" />

        <View
            style="@style/common_divider_line"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
    
    
    
    <RelativeLayout
        android:id="@+id/rl_group_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_title_bar"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
