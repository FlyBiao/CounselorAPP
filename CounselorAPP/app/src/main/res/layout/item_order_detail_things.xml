<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center" >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_order_detail_things_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/ll_my_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_order_detail_things_img"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_order_detail_things_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:textColor="@color/c1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_detail_things_code"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:textColor="@color/text_color_gray_3"
            android:textSize="12sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_order_detail_things_attr"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:textColor="@color/text_color_gray_3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_detail_things_quantity"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:textColor="@color/text_color_gray_3"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_detail_things_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/button_hui_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/size_5"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:paddingTop="@dimen/size_5"
        android:text="@string/tv_scan_check"
        android:textColor="@color/rgb_text_org"
        android:visibility="gone"
        android:textSize="12sp" />

</RelativeLayout>