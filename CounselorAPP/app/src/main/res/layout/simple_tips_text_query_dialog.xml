<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:paddingTop="18dp"
            android:textColor="@color/rgb_000"
            android:text="标题"
            android:textSize="@dimen/font_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_45"
                android:textColor="@color/c1"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_14"
                android:text="标题"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_45"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="@dimen/size_20"
                android:paddingTop="10dp"
                android:background="@drawable/et_remarks_bg"
                android:gravity="left|top"
                android:focusableInTouchMode="true"
                android:hint="请输入搜索标题"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_45"
                android:textColor="@color/c1"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_14"
                android:text="责任人"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_45"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="@dimen/size_20"
                android:paddingTop="10dp"
                android:background="@drawable/et_remarks_bg"
                android:gravity="left|top"
                android:focusableInTouchMode="true"
                android:hint="请输入责任人"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/size_18"
            android:background="#dcdcdc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_button_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/leftbottom_round_drawable"
            android:gravity="center"
            android:text="返回"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <Button
            android:id="@+id/dialog_sure_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rightbottom_round_drawable"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="@color/color_title_bar"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

</LinearLayout>