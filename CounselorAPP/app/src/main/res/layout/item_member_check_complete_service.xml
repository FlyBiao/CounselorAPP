<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:padding="@dimen/size_10"
              android:layout_marginBottom="@dimen/size_8"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user"
            android:textColor="@color/hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6"
            android:text="null"/>
        <TextView
            android:id="@+id/tv_CounselorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:paddingLeft="@dimen/size_5"
            android:paddingRight="@dimen/size_5"
            android:paddingTop="@dimen/size_3"
            android:paddingBottom="@dimen/size_3"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:textColor="@color/new_base_bg"
            android:text="导购-null"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_service_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:paddingLeft="@dimen/size_5"
                android:paddingRight="@dimen/size_5"
                android:paddingTop="@dimen/size_3"
                android:paddingBottom="@dimen/size_3"
                android:textColor="@color/white"
                android:background="@drawable/button_bule"
                android:text="已完成"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_times"
            android:textColor="@color/hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/tv_crate_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6"
            android:text="2018-2-23 12:00:23"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right"
                android:drawablePadding="@dimen/size_10"
                android:text="2018-2-13"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_phone"
            android:textColor="@color/hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/tv_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6"
            android:text="电话"/>
        <TextView
            android:id="@+id/tv_service_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:textColor="@color/new_base_bg"
            android:text="接听了"/>

        <TextView
            android:id="@+id/tv_go_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:textColor="@color/new_base_bg"
            android:text="接听了"/>
    </LinearLayout>
    <View style="@style/common_dotted_line"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/font_8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_comments"
            android:textColor="@color/hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/tv_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6"
            android:text="客人,"/>
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想直接线下购买即可，不愿意到店取"/>
    </LinearLayout>

</LinearLayout>