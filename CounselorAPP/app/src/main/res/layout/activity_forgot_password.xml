<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/base_color">

    <include layout="@layout/base_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_content_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_ellipse_grade_white_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:text="+86"/>

            <com.cesaas.android.counselor.order.widget.MClearEditText
                android:id="@+id/et_user_mobile"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="6dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="@string/login_input_mobile"
                android:inputType="phone"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/size_15"
            android:background="@drawable/button_ellipse_grade_white_bg"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_get_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/button_ellipse_blue_bg"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="获取验证码"
                android:layout_marginRight="@dimen/size_5"
                android:layout_centerVertical="true"/>

            <com.cesaas.android.counselor.order.widget.MClearEditText
                android:id="@+id/et_user_auth_code"
                android:layout_toLeftOf="@id/btn_get_auth_code"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:drawablePadding="6dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:paddingLeft="10dp"
                android:textSize="14.0sp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="33dp"
            android:layout_marginTop="@dimen/size_30"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_next_step"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/button_ellipse_red_bg"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="16.0sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>