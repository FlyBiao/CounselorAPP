<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:background="@drawable/base_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:gravity="center"
            android:text="新增箱"
            android:textColor="@color/base_text_font_color_black"
            android:textSize="@dimen/font_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/base_title_color"
                android:text="第"/>
            <LinearLayout
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:background="@drawable/et_remarks_bg">

                <EditText
                    android:id="@+id/et_box_no"
                    android:layout_height="@dimen/size_30"
                    android:layout_width="@dimen/size_60"
                    android:background="@null"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:hint="0"
                    android:inputType="number"
                    android:textColor="@color/c1"
                    android:textColorHint="@color/c3"
                    android:textCursorDrawable="@null"
                    android:textSize="14.0sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/base_title_color"
                android:gravity="center"
                android:text="箱"/>
        </LinearLayout>

        <View style="@style/common_divider_line"
            android:layout_marginTop="@dimen/size_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/base_text_font_color_black"
                android:gravity="center"
                android:text="返回"/>
            <View style="@style/common_shuli_divider_line"/>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/base_text_font_color_black"
                android:gravity="center"
                android:text="确定"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>