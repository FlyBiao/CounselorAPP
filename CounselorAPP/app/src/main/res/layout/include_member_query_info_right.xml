<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="@dimen/size_30"
    android:background="@color/new_base_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_35"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:gravity="center"
            android:text="储值金额"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/cb_StoredValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_10"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_MoneyAreaMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写储值金额"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_MoneyAreaMin"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center"
                android:background="@null"
                android:textColorHint="@color/white"
                android:enabled="false"
                android:gravity="top"
                android:hint="最小储值"
                android:inputType="numberDecimal"
                android:maxLines="10"
                android:minLines="8"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_5"
                android:scrollbars="vertical"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_stored_value_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/et_MoneyAreaMax"
                android:layout_width="@dimen/size_70"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:background="@null"
                android:enabled="false"
                android:gravity="top"
                android:hint="最大储值"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:maxLines="10"
                android:minLines="8"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_5"
                android:scrollbars="vertical"
                android:layout_weight="0.07"/>

            <TextView
                android:id="@+id/tv_MoneyAreaMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写储值金额"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="购买日期"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_buy_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_5"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_buy_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/data_w"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/size_5"
                android:text="开始日期"/>
            <TextView
                android:id="@+id/tv_purchase_date_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@color/white"
                android:text=""/>
            <TextView
                android:id="@+id/tv_buy_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/data_w"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/size_5"
                android:text="结束日期"/>

        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="生日范围"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_5"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_birthday_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/data_w"
                android:drawablePadding="@dimen/size_5"
                android:textColor="@color/white"
                android:text="开始范围"/>
            <TextView
                android:id="@+id/tv_birthday_scope_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@color/white"
                android:text=""/>
            <TextView
                android:id="@+id/tv_birthday_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/data_w"
                android:drawablePadding="@dimen/size_5"
                android:textColor="@color/white"
                android:text="结束范围"/>

        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="多日未购"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="最近一个月"/>
            <LinearLayout
                android:id="@+id/ll_select_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="会员等级"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="选择会员等级"/>
            <LinearLayout
                android:id="@+id/ll_select_vip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_35"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="积分范围"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_10"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_PointsAreaMin"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center"
                android:background="@null"
                android:enabled="false"
                android:gravity="top"
                android:hint="最低积分"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLines="10"
                android:minLines="8"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_5"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/tv_PointsAreaMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写积分范围"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_point_scope_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/et_PointsAreaMax"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center"
                android:background="@null"
                android:enabled="false"
                android:gravity="top"
                android:hint="最高积分"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLines="10"
                android:minLines="8"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_5"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/tv_PointsAreaMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写积分范围"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="注册日期"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_reg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_5"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_reg_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_5"
                android:drawableRight="@mipmap/data_w"
                android:textColor="@color/white"
                android:text="开始日期"/>

            <TextView
                android:id="@+id/tv_registr_date_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_5"
                android:text=""
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_reg_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_5"
                android:textColor="@color/white"
                android:drawableRight="@mipmap/data_w"
                android:text="结束日期"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="是否会员"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_5"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_5"
                android:textColor="@color/white"
                android:text="会员"/>

            <CheckBox
                android:id="@+id/cb_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_5"
                android:button="@drawable/checkbox_checked_styles"
                android:layout_marginLeft="@dimen/size_20"
                android:focusable="false"
                android:visibility="visible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_5"
                android:textColor="@color/white"
                android:text="粉丝"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="标签数量"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_5"
                android:button="@drawable/checkbox_checked_styles"
                android:focusable="false"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/et_tag_count"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center"
                android:background="@null"
                android:enabled="true"
                android:gravity="center"
                android:hint="0个"
                android:inputType="numberDecimal"
                android:maxLines="10"
                android:minLines="8"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_5"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:gravity="right"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_18"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="会员标签"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">
            <com.cesaas.android.counselor.order.custom.tag.FlowTagLayout
                android:id="@+id/member_lable_flow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_add_tags"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_marginTop="@dimen/size_10"
                android:scaleType="centerCrop"
                android:src="@mipmap/add_member_tags"/>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sure_query"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_30"
            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_ellipse_grade_huises_bg"
            android:text="确定"/>
        <TextView
            android:id="@+id/tv_cancel_query"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_30"
            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:text="重置"/>
    </LinearLayout>

</LinearLayout>