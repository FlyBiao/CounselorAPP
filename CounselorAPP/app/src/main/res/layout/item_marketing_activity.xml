<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:paddingTop="20dp">
	<com.cesaas.android.counselor.order.widget.CouponDisplayView
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/rgb_text_org"
		android:paddingBottom="10dp"
		android:padding="10dp">
		<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/settle_accounts"
			android:layout_gravity="center_vertical"
			android:scaleType="centerCrop"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="16dp">
			<TextView
				android:id="@+id/tv_activity_plan_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textColor="@color/c1"
				android:text="美食劵"
				/>
			<TextView
				android:id="@+id/tv_activity_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="@color/c1"
				android:text="双十一钜惠活动"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:paddingTop="5dp"
				android:textColor="@color/c1"
				android:text="截止日期:2016-12-31"
				/>
		</LinearLayout>
	</com.cesaas.android.counselor.order.widget.CouponDisplayView>

</FrameLayout>