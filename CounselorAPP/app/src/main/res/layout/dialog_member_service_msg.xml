<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_250"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_select_huashu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="选择话术"
                android:layout_marginRight="@dimen/size_20"
                android:textColor="@color/new_base_bg"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发送短信"/>

        </RelativeLayout>

        <View style="@style/common_divider_line"
              android:layout_marginTop="@dimen/size_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员:"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员"/>
        </LinearLayout>
        <View style="@style/common_divider_line"
              android:layout_marginTop="@dimen/size_20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机:"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_service_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:layout_marginTop="@dimen/size_30"
            android:paddingTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15"
            android:enabled="true"
            android:gravity="top"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:hint="短信内容"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:orientation="horizontal"
        android:background="@color/new_base_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="发送"
            android:textColor="@color/white"
            android:gravity="center_vertical|center"/>
    </LinearLayout>

</LinearLayout>