<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginBottom="@dimen/size_10"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:background="@color/white"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5"
        android:padding="@dimen/size_10">

        <LinearLayout
            android:id="@+id/ll_icon"
            android:layout_width="@dimen/size_70"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <com.flybiao.adapterlibrary.widget.MyImageViewWidget
                android:id="@+id/ivw_member_icon"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/no_picture"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ll_icon"
            android:layout_marginLeft="@dimen/size_2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/result_view"
                android:textSize="@dimen/font_16"
                android:text="2017-04-11"/>
                <TextView
                    android:id="@+id/tv_member_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:textColor="@color/c5"
                    android:layout_alignParentRight="true"
                    android:text="白金会员"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/font_14"
                    android:text="维护会员："/>
                <TextView
                    android:id="@+id/tv_member_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/c5"
                    android:textSize="@dimen/font_14"
                    android:text="2017"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_arrow"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>