<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_base_bg"
        android:orientation="horizontal">
        <include layout="@layout/base_title"/>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/base_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.cesaas.android.counselor.order.custom.imageview.CircleImageView
                android:id="@+id/ivw_user_icon"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/not_user_icon"
                app:border_imageview_color="@color/white"
                app:border_imageview_width="1dp"/>

            <LinearLayout
                android:id="@+id/ll_review"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text=""
                    android:textSize="@dimen/font_14"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_ellipse_grade_huise_bg"
                        android:paddingBottom="@dimen/size_3"
                        android:paddingLeft="@dimen/size_15"
                        android:paddingRight="@dimen/size_15"
                        android:paddingTop="@dimen/size_3"
                        android:text=""
                        android:textColor="@color/new_base_bg"
                        android:textSize="@dimen/font_10"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginBottom="@dimen/size_10"
                        android:textColor="@color/purple_normal"
                        android:text=""
                        android:textSize="@dimen/font_12"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <View style="@style/common_divider_line"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_25"
                                android:orientation="horizontal">

                                <View style="@style/common_shuli_divider_line"/>

                                <TextView
                                    android:id="@+id/tv_custom_review"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="自定义"/>

                                <View style="@style/common_shuli_divider_line"/>

                                <TextView
                                    android:id="@+id/tv_today_review"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="今天"/>

                                <View style="@style/common_shuli_divider_line"/>

                                <TextView
                                    android:id="@+id/tv_week_review"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_purple_bg"
                                    android:gravity="center"
                                    android:text="本周"
                                    android:textColor="@color/white"/>

                                <View style="@style/common_shuli_divider_line"/>
                                <TextView
                                    android:id="@+id/tv_month_review"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="本月"/>

                                <View style="@style/common_shuli_divider_line"/>
                            </LinearLayout>

                            <View style="@style/common_divider_line"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5"
                android:background="@drawable/button_ellipse_grade_huise_bg"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_review_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_28"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_score1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/red"/>

                        <TextView
                            android:id="@+id/tv_score2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text=""
                            android:textColor="@color/red"/>

                        <TextView
                            android:id="@+id/tv_score3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text=""
                            android:textColor="@color/red"/>

                        <TextView
                            android:id="@+id/tv_score4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text=""
                            android:textColor="@color/red"/>

                        <TextView
                            android:id="@+id/tv_score5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text=""
                            android:textColor="@color/red"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_points_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_user_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:text="0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_amount_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_user_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:text="0"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_score5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_review_score5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hui"
                            android:layout_marginLeft="@dimen/size_3"/>
                        <TextView
                            android:id="@+id/tv_score_value5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text="5"/>
                        <FrameLayout
                            android:layout_width="@dimen/size_150"
                            android:layout_height="@dimen/size_20"
                            android:layout_marginLeft="@dimen/size_5"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/new_base_bg">
                            <ProgressBar
                                android:id="@+id/pb_score5"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:progress="1"
                                android:progressDrawable="@drawable/layer_list_progress_drawable_lvse"/>
                            <TextView
                                android:id="@+id/tv_score_count5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:text="0"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_score4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_review_score4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hui"
                            android:layout_marginLeft="@dimen/size_3"/>
                        <TextView
                            android:id="@+id/tv_score_value4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text="4"/>
                        <FrameLayout
                            android:layout_width="@dimen/size_150"
                            android:layout_height="@dimen/size_20"
                            android:layout_marginLeft="@dimen/size_5"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/new_base_bg">
                            <ProgressBar
                                android:id="@+id/pb_score4"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:progress="1"
                                android:progressDrawable="@drawable/layer_list_progress_drawable_clerk"/>
                            <TextView
                                android:id="@+id/tv_score_count4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:text="0"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_review_score3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hui"
                            android:layout_marginLeft="@dimen/size_3"/>
                        <TextView
                            android:id="@+id/tv_score_value3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text="3"/>
                        <FrameLayout
                            android:layout_width="@dimen/size_150"
                            android:layout_height="@dimen/size_20"
                            android:layout_marginLeft="@dimen/size_5"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/new_base_bg">
                            <ProgressBar
                                android:id="@+id/pb_score3"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:progress="1"
                                android:progressDrawable="@drawable/layer_list_progress_drawable_haungse"/>
                            <TextView
                                android:id="@+id/tv_score_count3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:text="0"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_review_score2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hui"
                            android:layout_marginLeft="@dimen/size_3"/>
                        <TextView
                            android:id="@+id/tv_score_value2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text="2"/>
                        <FrameLayout
                            android:layout_width="@dimen/size_150"
                            android:layout_height="@dimen/size_20"
                            android:layout_marginLeft="@dimen/size_5"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/new_base_bg">
                            <ProgressBar
                                android:id="@+id/pb_score2"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:progress="1"
                                android:progressDrawable="@drawable/layer_list_progress_drawable_chengse"/>
                            <TextView
                                android:id="@+id/tv_score_count2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:text="0"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_review_score1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hui"
                            android:layout_marginLeft="@dimen/size_3"/>
                        <TextView
                            android:id="@+id/tv_score_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_3"
                            android:text="1"/>
                        <FrameLayout
                            android:layout_width="@dimen/size_150"
                            android:layout_height="@dimen/size_20"
                            android:layout_marginLeft="@dimen/size_5"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/new_base_bg">
                            <ProgressBar
                                android:id="@+id/pb_score1"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:progress="1"
                                android:progressDrawable="@drawable/layer_list_progress_drawable_red"/>
                            <TextView
                                android:id="@+id/tv_score_count1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:text="0"/>
                        </FrameLayout>
                        <TextView
                            android:id="@+id/tv_all_review"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="全部"
                            android:gravity="right|center_vertical"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_not_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="暂无数据"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
