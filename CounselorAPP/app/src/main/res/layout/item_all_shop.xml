<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_130dp"
        android:padding="@dimen/size_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_shop_img"
                android:layout_width="@dimen/size_85"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/avatar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是超级边边面的地方方法"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shop_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_give_receive_order_bg"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/base_self_lift"
                        android:paddingRight="@dimen/size_5"
                        android:paddingLeft="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_2"
                        android:layout_marginTop="@dimen/size_2"
                        android:gravity="right"
                        android:text="搭配款"/>

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop_style_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAA099D99D9DD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cbCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_checked_style"
                            android:gravity="right"
                            android:focusable="false" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/right_arrow"/>

                <View style="@style/common_divider_line"
                    android:id="@+id/common_divider_line"
                      android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_right_arrow"/>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是超级边边面的地方方法,"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/bookmark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6"
            android:text="556"/>

        <ImageView

            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/size_15"
            android:src="@mipmap/zan2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6"
            android:text="556"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/size_15"
            android:src="@mipmap/comment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6"
            android:text="556"/>

    </LinearLayout>

</LinearLayout>