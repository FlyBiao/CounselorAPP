<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/darkcyan">


    <ScrollView
        android:id="@+id/sv_shop_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darkcyan">

            <include layout="@layout/base_title"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_boss_top_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_6"
                    android:text="0000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_6"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_6"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零售总额"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_retail_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6"
                    android:text="￥0.0"
                    android:textColor="#91FF05"
                    android:textSize="@dimen/font_24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/size_180"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_all_data"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="全部"
                        android:textColor="#83D49A"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/tv_join_data"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="直营"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@color/white"/>
                    <TextView
                        android:id="@+id/tv_pool_data"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="加盟"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@color/white"/>
                    <TextView
                        android:id="@+id/tv_agency_data"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="代理"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@color/white"/>
                    <TextView
                        android:id="@+id/tv_direct_sales_data"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="联营"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shop_ss"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_80"
                android:background="#ABADA9"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_online_shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_shop_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_18"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线上店铺数"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_check_shop_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_5"
                            android:text=""
                            android:textSize="@dimen/font_16"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_sell_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_barcode_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_18"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="动销商品数"
                        android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_check_barcode_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/font_16"
                            android:layout_marginLeft="@dimen/size_5"
                            android:textColor="@color/white"/>
                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_store_sales"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sale_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_18"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_check_sale_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平均店销"
                        android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_check_check_sale_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/font_16"
                            android:layout_marginLeft="@dimen/size_5"
                            android:textColor="@color/white"/>
                </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_target"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:background="#A5A59B"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_10"
                android:gravity="center_vertical"
                android:text="目标进度"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mubiao_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_boss_centre_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_month_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_month_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8月"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_30"
                        android:text="实际销售/目标"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_month_sales_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥0.0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_month_sales_target_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥0.0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_check_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_5"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_16"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_month_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0%"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/pb_actual_sales_month"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_margin="@dimen/size_10"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/layer_list_progress_drawable_1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_year_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10"
                android:layout_marginTop="@dimen/size_30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_year_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017年"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_30"
                        android:text="实际销售/目标"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_year_sales_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥0.0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_year_target_sales_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥0.0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_check_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/font_16"
                            android:layout_marginLeft="@dimen/size_5"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_year_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0%"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/pb_actual_sales_year"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginBottom="@dimen/size_10"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/layer_list_progress_drawable_1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vip_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员数"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_30"
                        android:text="新招募/目标"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_vip_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_vip_target_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_check_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/font_16"
                            android:layout_marginLeft="@dimen/size_5"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_vip_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0%"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/pb_vip"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_10"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/layer_list_progress_drawable_2" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sales_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:background="#A5A59B"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_10"
                android:gravity="center_vertical"
                android:text="销售数据"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sales_tongqi_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_boss_centre_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:layout_marginLeft="@dimen/size_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="前一天销售"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_before_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="￥0.0"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_15"
                    android:gravity="center_vertical"
                    android:text="较前日"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_fa_caret_up"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_3"
                    android:gravity="center_vertical"
                    android:text="@string/fa_caret_up"
                    android:textColor="@color/springgreen"
                    android:textSize="@dimen/font_22"/>

                <TextView
                    android:id="@+id/tv_before_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="0%"
                    android:textColor="@color/springgreen"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="上周同期销售"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_last_week"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥0.0"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_15"
                    android:text="较上周同期"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_fa_caret_down"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/fa_caret_down"
                    android:textColor="@color/springgreen"
                    android:textSize="@dimen/font_22"/>

                <TextView
                    android:id="@+id/tv_last_week_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0%"
                    android:textColor="@color/springgreen"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/left_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
