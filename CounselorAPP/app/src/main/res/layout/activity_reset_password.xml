<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/base_color">

    <include layout="@layout/base_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_content_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/size_15"
            android:background="@drawable/button_ellipse_grade_white_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_check_new_pwd"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:src="@mipmap/check_pwd"
                android:layout_centerVertical="true"/>

            <com.cesaas.android.counselor.order.widget.MClearEditText
                android:id="@+id/et_new_pwd"
                android:layout_toLeftOf="@id/iv_check_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:drawablePadding="6dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:paddingLeft="10dp"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/size_15"
            android:background="@drawable/button_ellipse_grade_white_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_again_check_new_pwd"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:src="@mipmap/check_pwd"
                android:layout_centerVertical="true"/>

            <com.cesaas.android.counselor.order.widget.MClearEditText
                android:id="@+id/et_again_check_new_pwd"
                android:layout_toLeftOf="@id/iv_again_check_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:drawablePadding="6dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:paddingLeft="10dp"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密码又6-10英文字母，数字或符号至少两项组成"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="33dp"
            android:layout_marginTop="@dimen/size_30"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_submit_reset"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/button_ellipse_red_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16.0sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>