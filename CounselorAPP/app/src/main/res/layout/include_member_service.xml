<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_service_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/member_visit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_visit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售回访"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_visit_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="感谢，洗涤保养，满意度等"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_visit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_count_red_bg"
                android:paddingBottom="@dimen/size_2"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_2"
                android:text="0"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_dotted_line"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginRight="@dimen/size_10"/>

    <LinearLayout
        android:id="@+id/ll_service_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/member_birthday"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_birth_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日祝福"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_birth_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="给会员提前生日祝福"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_birth_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_count_red_bg"
                android:paddingBottom="@dimen/size_2"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_2"
                android:text="0"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_dotted_line"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginRight="@dimen/size_10"/>
    <LinearLayout
        android:id="@+id/ll_service_fest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/xium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_festival_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:text="节日安排"/>
            <TextView
                android:id="@+id/tv_festivale_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="会员节日祝福"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_festival_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_2"
                android:paddingBottom="@dimen/size_2"
                android:background="@drawable/button_count_red_bg"
                android:text="0"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_dotted_line"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginRight="@dimen/size_10"/>

    <LinearLayout
        android:id="@+id/ll_service_dormancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/xium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dormancy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="休眠激活"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_dormancy_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="30天未消费"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dormancy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_count_red_bg"
                android:paddingBottom="@dimen/size_2"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_2"
                android:text="0"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_dotted_line"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginRight="@dimen/size_10"/>

    <LinearLayout
        android:id="@+id/ll_service_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/returng"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_return_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退换货"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_return_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="退换货会员服务查询"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_return_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_count_red_bg"
                android:paddingBottom="@dimen/size_2"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_2"
                android:text="0"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_dotted_line"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginRight="@dimen/size_10"/>

    <LinearLayout
        android:id="@+id/ll_return_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/return_continue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再次服务"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_return_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="到店提醒,再次电话回访"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_return_continue_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_count_red_bg"
                android:paddingBottom="@dimen/size_2"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_2"
                android:text="0"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_dotted_line"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginRight="@dimen/size_10"/>

    <LinearLayout
        android:id="@+id/ll_service_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/member_custom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_custom_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:text="定制会员项目"/>
            <TextView
                android:id="@+id/tv_custom_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="开业，积分活动等"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_custom_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_count_red_bg"
                android:paddingBottom="@dimen/size_2"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_2"
                android:text="0"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_dotted_line"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginRight="@dimen/size_10"/>
</LinearLayout>