<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/base_color"
              android:orientation="vertical">

    <include layout="@layout/base_title"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <include layout="@layout/include_select_date"/>

        <View style="@style/common_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/new_base_bg"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:text="数量"/>

            </LinearLayout>
            <View style="@style/common_shuli_divider_line"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/new_base_bg"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_14"
                    android:text="0%"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:text="平均折扣"/>

            </LinearLayout>
            <View style="@style/common_shuli_divider_line"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/new_base_bg"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:text="￥0.0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:text="结算金额"/>

            </LinearLayout>
            <View style="@style/common_shuli_divider_line"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/new_base_bg"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:text="￥0.0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:text="原价金额"/>

            </LinearLayout>
            <View style="@style/common_shuli_divider_line"/>
        </LinearLayout>
        <View style="@style/common_divider_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginRight="@dimen/size_5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30"
                    android:background="@drawable/button_ellipse_grade_huise_bg"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"

                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_search_vip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_30"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/search"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_30"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:inputType="text"
                        android:layout_weight="8"
                        android:enabled="true"
                        android:gravity="center"
                        android:hint="输入单号，卡号搜索"
                        android:textColorHint="@color/line"
                        android:paddingLeft="@dimen/size_10"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <View style="@style/common_divider_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25"
                    android:orientation="horizontal">

                    <View style="@style/common_shuli_divider_line"/>

                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_purple_bg"
                        android:gravity="center"
                        android:text="全部"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"/>

                    <View style="@style/common_shuli_divider_line"/>

                    <TextView
                        android:id="@+id/tv_bill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="已登帐"
                        android:textSize="@dimen/font_12"/>

                    <View style="@style/common_shuli_divider_line"/>

                    <TextView
                        android:id="@+id/tv_audit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="已审核"
                        android:textSize="@dimen/font_12"/>

                    <View style="@style/common_shuli_divider_line"/>
                </LinearLayout>

                <View style="@style/common_divider_line"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_retail_order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_not_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无数据"
            android:visibility="gone"/>

    </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
