<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_base_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/dfff"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/ll_shop_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_back" />

            <TextView
                android:id="@+id/tv_express_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="店员"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增店员"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textSize="14.0sp" 
            android:text="名称:"/>
        
        <com.cesaas.android.counselor.order.widget.MClearEditText
            	android:id="@+id/mcet_shopstaff_name"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:paddingRight="10dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入店员名称"
                android:inputType="text"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        
    </LinearLayout>
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textSize="14.0sp" 
            android:text="昵称:"/>
        
        <com.cesaas.android.counselor.order.widget.MClearEditText
            	android:id="@+id/mcet_shopstaff_nickname"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:paddingRight="10dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入店员昵称"
                android:inputType="text"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        
    </LinearLayout>
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14.0sp" 
            android:paddingRight="15dp"
            android:text="手机:"/>
        
        <com.cesaas.android.counselor.order.widget.MClearEditText
            	android:id="@+id/mcet_shopstaff_mobile"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:paddingRight="10dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入店员手机号"
                android:inputType="phone"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        
    </LinearLayout>
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14.0sp" 
            android:text="性别:"/>
        
        <com.cesaas.android.counselor.order.widget.GroupButtonView
            android:id="@+id/gbv_shopstaff_sex"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            app:groupBtnCodeText="0#1"
            app:groupBtnNameText="男#女">
            
        </com.cesaas.android.counselor.order.widget.GroupButtonView>
    
    </LinearLayout>
    
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14.0sp" 
            android:text="级别:"/>
    
        <com.cesaas.android.counselor.order.widget.GroupButtonView
            android:id="@+id/gbv_shopstaff_level"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            app:groupBtnCodeText="0#1"
            app:groupBtnNameText="店员#店长">
            
        </com.cesaas.android.counselor.order.widget.GroupButtonView>
        
    </LinearLayout>
    
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:id="@+id/ll_cunselor_level_list"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textSize="14.0sp" 
            android:text="等级:"/>
        
        <TextView
            android:id="@+id/tv_counselor_level"
	        android:layout_width="0.0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_weight="1.0"
	        android:drawablePadding="10dp"
	        android:gravity="right"
	        android:drawableRight="@drawable/icon_right_allow"/>
        
    </LinearLayout>
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="注:"/>
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在添加之前请确保该手机号已经关注了微信公众号并且已注册会员！"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_create_staff_code"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/register_button"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
