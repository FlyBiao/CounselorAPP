<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stand_bg"
    android:orientation="vertical" >
    
    <RelativeLayout 
               android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:background="@drawable/order_item_bg"
            	android:layout_margin="5dp" >
            	
			    <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:padding="10dp"
		            android:orientation="vertical" >
		            <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:orientation="horizontal" >
		            <TextView
		                android:id="@+id/tv_test_ing_title"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="title"
		                android:textSize="16sp" />
		            
		            <TextView
		                android:id="@+id/tv_test_ing_ismust"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:paddingLeft="10dp"
		                android:paddingRight="10dp"
		                android:paddingTop="3dp"
		                android:paddingBottom="3dp"
		                android:text="必考"
		                android:textColor="@color/white"
		                android:background="@drawable/button_ellipse_red_bg"
		                android:textSize="12sp" />
		            
		            </RelativeLayout>
		            
		            <RelativeLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="7dp"
			            android:orientation="horizontal" >
			            <TextView
			                android:id="@+id/tv_test_ing_count1"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textColor="@color/c3"
			                android:text="题目数量:"
			                android:textSize="14sp" />
			            <TextView
			                android:id="@+id/tv_test_ing_count"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_toRightOf="@id/tv_test_ing_count1"
			                android:textColor="@color/c3"
			                android:text="12"
			                android:textSize="14sp" />
			            
			            <TextView
			                android:id="@+id/tv_test_ing_percentage"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:textColor="@color/orange"
			                android:text="33%"
			                android:textSize="14sp" />
			            
		            </RelativeLayout>
		            
		            <RelativeLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:orientation="horizontal" >
		            
			            <TextView
			                android:id="@+id/tv_test_ing_sum"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textColor="@color/c3"
			                android:text="试卷总分:"
			                android:textSize="14sp" />
			            
			            <TextView
			                android:id="@+id/tv_test__ing_fullscore "
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_toRightOf="@id/tv_test_ing_sum"
			                android:textColor="@color/c3"
			                android:text="12"
			                android:textSize="14sp" />
			            
			            <LinearLayout
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentRight="true"
				            android:gravity="center_vertical"
				            android:orientation="horizontal" >
				            <TextView
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:text="剩余时间:"
				                android:textSize="14sp" />
				            <TextView
				                android:id="@+id/tv_test_residue_time"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:textSize="14sp" />
		            </LinearLayout>
		            
		            </RelativeLayout>
		            
	            </LinearLayout>
            </RelativeLayout>

</LinearLayout>
