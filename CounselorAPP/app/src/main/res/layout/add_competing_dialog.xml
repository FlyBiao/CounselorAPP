<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:paddingTop="18dp"
            android:text="添加竞品企业"
            android:textColor="@color/rgb_000"
            android:textSize="@dimen/font_18" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dcdcdc" />

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:orientation="horizontal">
	            
                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="企业:"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="16sp"/>
                
                <com.cesaas.android.counselor.order.widget.MClearEditText
                    android:id="@+id/mcet_company_name"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:paddingLeft="10dp"
	                android:background="@null"
	                android:focusableInTouchMode="true"
	                android:layout_marginRight="10dp"
	                android:hint="请输入企业名称"
	                android:inputType="text"
	                android:textColor="@color/c1"
	                android:textColorHint="@color/c3"
	                android:textCursorDrawable="@null"
	                android:textSize="16.0sp" />
            
        	</LinearLayout>
        	
            <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_marginTop="@dimen/size_18"
	            android:background="#dcdcdc" />
                   	
            <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:layout_marginTop="5dp"
	            android:orientation="horizontal">
            
                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="销售额:"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="16sp"/>
                <com.cesaas.android.counselor.order.widget.MClearEditText
                    android:id="@+id/mcet_sales_amount"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:paddingLeft="10dp"
	                android:background="@null"
	                android:focusableInTouchMode="true"
	                android:layout_marginRight="10dp"
	                android:hint="请输入企业销售额"
	                android:inputType="phone"
	                android:textColor="@color/c1"
	                android:textColorHint="@color/c3"
	                android:textCursorDrawable="@null"
	                android:textSize="16.0sp" />
        	</LinearLayout>
            
        </LinearLayout>
        

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/size_18"
            android:background="#dcdcdc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_button_layout"
        android:layout_width="300dp"
        android:background="@color/c5"
        android:layout_height="47dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel_add_competing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/leftbottom_round_drawable"
            android:gravity="center"
            android:text="@string/cancels"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/font_18" />
        
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />
        
        <Button
            android:id="@+id/btn_sure_add_competing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/leftbottom_round_drawable"
            android:gravity="center"
            android:text="添加"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/font_18" />
</LinearLayout>
</LinearLayout>