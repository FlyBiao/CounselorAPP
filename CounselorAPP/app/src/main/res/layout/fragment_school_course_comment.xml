<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_content_bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_alignParentBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="收藏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/size_150"
                android:layout_height="@dimen/size_40"
                android:background="@color/green_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="立即参与"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/ll_alignParentBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_review_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_28"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/tv_score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text=""
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/tv_score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text=""
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/tv_score4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text=""
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/tv_score5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text=""
                        android:textColor="@color/red"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_points_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_user_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:text="0"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_score5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_review_score5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hui"
                        android:layout_marginLeft="@dimen/size_3"/>
                    <TextView
                        android:id="@+id/tv_score_value5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text="5"/>
                    <FrameLayout
                        android:layout_width="@dimen/size_150"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_5"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/new_base_bg">
                        <ProgressBar
                            android:id="@+id/pb_score5"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="1"
                            android:progressDrawable="@drawable/layer_list_progress_drawable_lvse"/>
                        <TextView
                            android:id="@+id/tv_score_count5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:text="0"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_score4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_review_score4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hui"
                        android:layout_marginLeft="@dimen/size_3"/>
                    <TextView
                        android:id="@+id/tv_score_value4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text="4"/>
                    <FrameLayout
                        android:layout_width="@dimen/size_150"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_5"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/new_base_bg">
                        <ProgressBar
                            android:id="@+id/pb_score4"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="1"
                            android:progressDrawable="@drawable/layer_list_progress_drawable_clerk"/>
                        <TextView
                            android:id="@+id/tv_score_count4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:text="0"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_score3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_review_score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hui"
                        android:layout_marginLeft="@dimen/size_3"/>
                    <TextView
                        android:id="@+id/tv_score_value3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text="3"/>
                    <FrameLayout
                        android:layout_width="@dimen/size_150"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_5"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/new_base_bg">
                        <ProgressBar
                            android:id="@+id/pb_score3"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="1"
                            android:progressDrawable="@drawable/layer_list_progress_drawable_haungse"/>
                        <TextView
                            android:id="@+id/tv_score_count3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:text="0"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_score2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_review_score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hui"
                        android:layout_marginLeft="@dimen/size_3"/>
                    <TextView
                        android:id="@+id/tv_score_value2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text="2"/>
                    <FrameLayout
                        android:layout_width="@dimen/size_150"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_5"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/new_base_bg">
                        <ProgressBar
                            android:id="@+id/pb_score2"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="1"
                            android:progressDrawable="@drawable/layer_list_progress_drawable_chengse"/>
                        <TextView
                            android:id="@+id/tv_score_count2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:text="0"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_review_score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hui"
                        android:layout_marginLeft="@dimen/size_3"/>
                    <TextView
                        android:id="@+id/tv_score_value1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3"
                        android:text="1"/>
                    <FrameLayout
                        android:layout_width="@dimen/size_150"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_5"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/new_base_bg">
                        <ProgressBar
                            android:id="@+id/pb_score1"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="1"
                            android:progressDrawable="@drawable/layer_list_progress_drawable_red"/>
                        <TextView
                            android:id="@+id/tv_score_count1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:text="0"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_all_review"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="全部"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_not_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无数据"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
