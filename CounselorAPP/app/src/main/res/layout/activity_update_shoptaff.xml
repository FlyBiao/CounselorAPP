<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/dfff"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_title_bar" >

        <LinearLayout
            android:id="@+id/ll_shopstaff_update_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_back" />

            <TextView
                android:id="@+id/tv_express_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="店员修改"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textSize="14.0sp" 
            android:text="店员名称:"/>
        
        <com.cesaas.android.counselor.order.widget.MClearEditText
            	android:id="@+id/mcet_update_shopstaff_name"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入店员名称"
                android:inputType="text"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        
    </LinearLayout>
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textSize="14.0sp" 
            android:text="店员昵称:"/>
        
        <com.cesaas.android.counselor.order.widget.MClearEditText
            	android:id="@+id/mcet_update_shopstaff_nickname"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入店员昵称"
                android:inputType="text"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        
    </LinearLayout>
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14.0sp" 
            android:paddingRight="15dp"
            android:text="店员手机号:"/>
        
        <com.cesaas.android.counselor.order.widget.MClearEditText
            	android:id="@+id/mcet_update_shopstaff_mobile"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入店员手机号"
                android:inputType="phone"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />
        
    </LinearLayout>
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14.0sp" 
            android:text="店员性别:"/>
        
        <TextView
            android:id="@+id/gbv_update_shopstaff_sex"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_right_allow"
            />
            
    
    </LinearLayout>
    
    <View style="@style/common_divider_line" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14.0sp" 
            android:text="店员级别:"/>
    
        <TextView
            android:id="@+id/gbv_update_shopstaff_level"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_right_allow"
            />
        
    </LinearLayout>
    
    <View style="@style/common_divider_line" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_update"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_login_bg"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
    </LinearLayout>
    
</LinearLayout>
