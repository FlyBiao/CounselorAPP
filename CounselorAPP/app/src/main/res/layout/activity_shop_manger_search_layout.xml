<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_title_bar" >

        <LinearLayout
            android:id="@+id/ll_shop_mange_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品查询"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
    </RelativeLayout>
    
    <TextView 
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textSize="14.0sp"
        android:text="罗湖四威店"
        />
    
    <View 
        android:layout_height="0.5dip"
        android:layout_width="fill_parent"
        android:background="@color/c5"/>
    <LinearLayout 
        android:layout_height="50dip"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/tv_search_type_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/c5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14.0sp" 
            android:text="点击搜索"/>
        
        <com.cesaas.android.counselor.order.widget.MClearEditText
            android:id="@+id/et_search_text"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:paddingLeft="10dp"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="请输入商品名称,货号,价格,标签搜索"
                android:inputType="phone"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp" />
        
    </LinearLayout>
    <View 
        android:layout_height="0.5dip"
        android:layout_width="fill_parent"
        android:background="@color/c5"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

                <com.cesaas.android.counselor.order.widget.flowlayout.FlowLayout
                    android:id="@+id/mFlowLayout"
                    app:horizontalSpacing="8dp"
                    app:verticalSpacing="8dp"
                    app:textSize="16sp"
                    app:equally="true"
                    app:stype="select"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

    </ScrollView>
    

</LinearLayout>
