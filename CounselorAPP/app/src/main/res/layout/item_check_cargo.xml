<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<View style="@style/common_divider_line" 
        android:layout_marginTop="5dp"/>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/tv_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:text="数量："/>
        <TextView 
            android:id="@+id/tv_check_cargo_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_shuliang"
            android:textSize="@dimen/font_14"
            />
        <TextView 
            android:id="@+id/tv_check_cargo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_check_cargo_quantity"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/font_14"
            />
        
        <TextView
	        android:id="@+id/tv_is_check_cargo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/selector_img_express_pay"
	        android:enabled="false"
            android:textSize="@dimen/font_14"
	        android:visibility="gone"
	        />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/tv_check_cargo_b_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            />
        <TextView 
            android:id="@+id/tv_check_cargo_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:layout_marginLeft="20dp"
            />
        
    </LinearLayout>
    
  <!--   <View style="@style/common_divider_line" 
        android:layout_marginTop="5dp"/> -->
    
</LinearLayout>
