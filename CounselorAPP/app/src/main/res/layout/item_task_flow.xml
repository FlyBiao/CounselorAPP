<?xml version="1.0" encoding="utf-8"?>
<!-- 检查单位item布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
			  android:orientation="vertical"
    android:background="@drawable/listview_item_pressed_style"
    android:gravity="center_vertical">
    


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">


		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/tv_task_crate_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0000-00-00"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="00:00:00"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/size_10"
			android:layout_marginLeft="@dimen/size_10"
			android:orientation="vertical">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:scaleType="centerCrop"
				android:src="@mipmap/check"/>
			<View
				android:layout_width="@dimen/size_1"
				android:layout_height="@dimen/size_30"
				android:layout_gravity="center"
				android:background="@color/text_press"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/tv_task_flow_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/darkcyan"
				android:textStyle="bold"
				android:text=""/>
			<TextView
				android:id="@+id/tv_task_remark"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""/>
		</LinearLayout>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/tv_task_over"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="任务结束"
			android:visibility="gone"/>
	</LinearLayout>


</LinearLayout>