<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/size_12"
      android:layout_marginRight="@dimen/size_12"
      android:orientation="vertical">

  <TextView
        android:id="@+id/id_index_gallery_month_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="0.0"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/id_index_volume_progress"
        android:layout_width="@dimen/size_15"
        android:layout_height="140dp"
        android:background="@color/base_text_color"
        android:textSize="12dp" />

  </LinearLayout>

  <View style="@style/common_divider_line"
        android:layout_marginTop="@dimen/size_2"
      android:layout_width="match_parent"/>

  <TextView
      android:id="@+id/id_index_gallery_month"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/size_12"
      android:paddingTop="@dimen/size_6"
      android:textSize="12dp"
      android:text="1æœˆ"/>

</LinearLayout>
