<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/order_item_bg"
              android:orientation="vertical"
                android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/ll_route_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_5"
        android:orientation="horizontal">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@null"
            android:layout_marginLeft="10dp"
            android:src="@drawable/no_picture"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_img"
            android:layout_marginLeft="@dimen/size_5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="names"
                android:textColor="@color/c1"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_order_attr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_gray_3"
                    android:text="4444"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/orange"
                    android:layout_alignParentRight="true"
                    android:text="23"
                    android:textSize="16sp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:textColor="@color/text_color_gray_3"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:text="3333"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_color_gray_3"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="x2"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="@dimen/size_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_send_orders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_10"
                android:gravity="center"
                android:background="@drawable/button_receive_order_bg"
                android:text="我要接单"
                android:textColor="@color/white"
                android:visibility="visible" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size_10"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_not_huo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_10"
                android:gravity="center"
                android:background="@drawable/button_give_receive_order_bg"
                android:text="退回"
                android:textColor="@color/base_self_lift"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>