<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/size_380"
        android:layout_height="wrap_content"
        android:background="@drawable/base_dialog_bg"
        android:orientation="vertical"
        android:paddingRight="@dimen/size_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <com.cesaas.android.counselor.order.custom.imageview.CircleImageView
                    android:id="@+id/ivw_user_icon"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_60"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/not_user_icon"
                    app:border_imageview_color="@color/white"
                    app:border_imageview_width="1dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center"
                    android:text="null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_5"
                        android:textSize="@dimen/font_16"
                        android:text=""/>

                    <EditText
                        android:id="@+id/et_sales"
                        android:layout_width="match_parent"
                        android:layout_height="35.0dip"
                        android:layout_marginBottom="@dimen/size_10"
                        android:background="@drawable/button_et_sendorder_bg"
                        android:focusableInTouchMode="true"
                        android:hint="销售目标"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/size_10"
                        android:textColorHint="@color/black_de"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_surpass_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_5"
                        android:textSize="@dimen/font_16"
                        android:text=""/>

                    <EditText
                        android:id="@+id/et_surpass"
                        android:layout_width="match_parent"
                        android:layout_height="35.0dip"
                        android:layout_marginBottom="@dimen/size_10"
                        android:background="@drawable/button_et_sendorder_bg"
                        android:focusableInTouchMode="true"
                        android:hint="挑战目标"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/size_10"
                        android:textColorHint="@color/black_de"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_5"
                        android:textSize="@dimen/font_16"
                        android:text=""/>

                    <EditText
                        android:id="@+id/et_card"
                        android:layout_width="match_parent"
                        android:layout_height="35.0dip"
                        android:layout_marginBottom="@dimen/size_10"
                        android:background="@drawable/button_et_sendorder_bg"
                        android:focusableInTouchMode="true"
                        android:hint="开卡目标"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/size_10"
                        android:textColorHint="@color/black_de"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_14"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_10"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_20"
                android:background="@drawable/bule_button_bg"
                android:paddingBottom="@dimen/size_8"
                android:paddingLeft="@dimen/size_20"
                android:paddingRight="@dimen/size_20"
                android:paddingTop="@dimen/size_8"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_toRightOf="@id/tv_cancel"
                android:background="@drawable/bule_button_bg"
                android:paddingBottom="@dimen/size_8"
                android:paddingLeft="@dimen/size_20"
                android:paddingRight="@dimen/size_20"
                android:paddingTop="@dimen/size_8"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>