<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stand_bg"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_250"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_10"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择需要关闭的会员服务"/>
            <ImageView
                android:id="@+id/iv_close_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/colse_service"/>

        </RelativeLayout>

        <View style="@style/common_dotted_line"
              android:layout_marginTop="@dimen/size_10"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_service_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sure_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center"
        android:background="@color/new_base_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="确认关闭"/>
    </LinearLayout>

</LinearLayout>