<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_marginBottom="@dimen/size_10"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_talk_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_2"
            android:layout_marginTop="@dimen/size_2"
            android:background="@drawable/button_sales_talk_bg"
            android:gravity="right"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_12"
            android:paddingRight="@dimen/size_12"
            android:paddingTop="@dimen/size_5"
            android:text="售后"
            android:textColor="@color/base_color"
            android:textSize="@dimen/font_12"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/cbCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/checkbox_checked_style"
            android:visibility="gone"
            android:focusable="false"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_sales_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:text="null"/>
        <TextView
            android:id="@+id/tv_sales_talk_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:textSize="@dimen/font_14"
            android:text="null"/>
    </LinearLayout>



</LinearLayout>