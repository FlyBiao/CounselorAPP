<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_base_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color"
        android:orientation="vertical">
        <include layout="@layout/base_title"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_scan_sum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_3"
        android:layout_marginTop="@dimen/size_2"
        android:layout_marginRight="@dimen/size_5"
        android:layout_marginLeft="@dimen/size_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_30"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/size_10"
            android:background="@drawable/button_ellipse_grade_huise_bg"
            android:gravity="center"
            android:text="返回"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_scan_complete"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_30"
            android:layout_marginLeft="@dimen/size_70"
            android:layout_marginRight="@dimen/size_70"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_purple"
            android:text="扫描完成"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_base_title"
        android:layout_above="@id/ll_scan_sum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <cn.bingoogolapple.qrcode.zxing.ZXingView
            android:id="@+id/zxingview"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:qrcv_animTime="1000"
            app:qrcv_barCodeTipText="将条码放入框内，即可自动扫描"
            app:qrcv_barcodeRectHeight="140dp"
            app:qrcv_borderColor="@android:color/white"
            app:qrcv_borderSize="1dp"
            app:qrcv_cornerColor="@color/base_color"
            app:qrcv_cornerLength="20dp"
            app:qrcv_cornerSize="3dp"
            app:qrcv_customScanLineDrawable="@mipmap/scan_icon_scanline"
            app:qrcv_isBarcode="false"
            app:qrcv_isCenterVertical="false"
            app:qrcv_isOnlyDecodeScanBoxArea="false"
            app:qrcv_isScanLineReverse="true"
            app:qrcv_isShowDefaultGridScanLineDrawable="false"
            app:qrcv_isShowDefaultScanLineDrawable="true"
            app:qrcv_isShowTipBackground="true"
            app:qrcv_isShowTipTextAsSingleLine="false"
            app:qrcv_isTipTextBelowRect="false"
            app:qrcv_maskColor="#33FFFFFF"
            app:qrcv_qrCodeTipText="将二维码/条码放入框内，即可自动扫描"
            app:qrcv_rectWidth="200dp"
            app:qrcv_scanLineColor="@color/base_color"
            app:qrcv_scanLineMargin="0dp"
            app:qrcv_scanLineSize="0.5dp"
            app:qrcv_tipTextColor="@android:color/white"
            app:qrcv_tipTextSize="12sp"
            app:qrcv_topOffset="5dp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"/>
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="@dimen/size_5"
                android:text="提示：侧滑可删除，更改数量"/>
        </LinearLayout>
        <View style="@style/common_divider_line"/>
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
