<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="?selectableItemBackground"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/size_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_try_wear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记录人"/>
            <TextView
                android:id="@+id/tv_try_wear_record"
                android:layout_toRightOf="@id/tv_try_wear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlyBiao"/>

            <TextView
                android:id="@+id/tv_try_wear_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_10"
                android:text="2017-2-12"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_try_wear_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="title"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/size_6"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/del"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>