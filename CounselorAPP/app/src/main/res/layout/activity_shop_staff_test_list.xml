<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/dfff"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/ll_training_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商学院"
            android:textColor="@color/white"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/tv_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="考试"
            android:textColor="@color/white"
            android:textSize="16sp" 
            android:visibility="gone"/>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/stand_bg">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >
            
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:text="未考试"
                android:gravity="center"
                android:textColor="@color/color_title_bar"
                android:id="@+id/tv_not_test"
                android:layout_height="match_parent"/>
            
             <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:text="进行中"
                android:id="@+id/tv_test_ing"
                android:gravity="center"
                android:layout_height="match_parent"/>
             
             <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:text="已完成"
                android:id="@+id/tv_test_complete"
                android:gravity="center"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:id="@+id/shop_test_lines"
            android:layout_alignParentBottom="true"
            android:background="@color/color_title_bar"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    
	    <android.support.v4.view.ViewPager
	        android:id="@+id/vp_test_viewPager"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	    </android.support.v4.view.ViewPager>
    
    </LinearLayout>
    
    </LinearLayout>

</LinearLayout>
