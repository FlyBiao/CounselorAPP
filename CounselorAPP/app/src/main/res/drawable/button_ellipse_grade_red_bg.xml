<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/size_15" android:bottomRightRadius="@dimen/size_15" android:topLeftRadius="@dimen/size_15" android:topRightRadius="@dimen/size_15" />

            <stroke android:width="2px" android:color="@color/base_color" />

            <solid android:color="@color/transparent" />
        </shape>
        
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/size_15" android:bottomRightRadius="@dimen/size_15" android:topLeftRadius="@dimen/size_15" android:topRightRadius="@dimen/size_15" />

            <stroke android:width="2px" android:color="@color/base_color" />

            <solid android:color="@color/transparent" />
        </shape>
        
     </item>

</selector>