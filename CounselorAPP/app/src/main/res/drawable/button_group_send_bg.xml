<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

            <stroke android:width="3px" android:color="@color/day_sign_content_text_white_30" />

            <solid android:color="@color/day_sign_content_text_white_30" />
        </shape>
        
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

            <stroke android:width="3px" android:color="@color/day_sign_content_text_white_30" />

            <solid android:color="@color/day_sign_content_text_white_30" />
        </shape>
        
     </item>

</selector>